@model IEnumerable<AdvertisementServiceMVC2.Models.AppUser>

<h2>Управление пользователями</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Имя</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Редактировать</a>

                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить пользователя?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary">Назад в админку</a>