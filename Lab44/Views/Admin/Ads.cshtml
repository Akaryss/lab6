@model IEnumerable<AdvertisementServiceMVC2.Models.Advertisement>
@{
    ViewData["Title"] = "Модерация объявлений";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Все объявления (Всего страниц: @ViewBag.TotalPages)</h2>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Заголовок</th>
            <th>Пользователь</th>
            <th>Категория</th>
            <th>Дата</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    <a asp-controller="Advertisements" asp-action="Details" asp-route-id="@item.Id" target="_blank">
                        @item.Title
                    </a>
                </td>
                <td>@item.User.Email</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.CreatedAt.ToShortDateString()</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <form asp-action="DeleteAd" method="post" onsubmit="return confirm('Удалить это объявление?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Пагинация -->
<nav>
    <ul class="pagination">
        @if (ViewBag.CurrentPage > 1)
        {
            <li class="page-item"><a class="page-link" asp-action="Ads" asp-route-page="@(ViewBag.CurrentPage - 1)">Назад</a></li>
        }
        <li class="page-item disabled"><span class="page-link">Стр. @ViewBag.CurrentPage</span></li>
        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <li class="page-item"><a class="page-link" asp-action="Ads" asp-route-page="@(ViewBag.CurrentPage + 1)">Вперед</a></li>
        }
    </ul>
</nav>