@page
@model RegisterModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="row g-0">
                    <!-- Левая часть с формой -->
                    <div class="col-md-6">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <h3 class="fw-bold text-primary">Создать аккаунт</h3>
                                <p class="text-muted">Заполните форму для регистрации</p>
                            </div>

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                           placeholder="name@example.com" />
                                    <label asp-for="Input.Email" class="form-label">
                                        <i class="bi bi-envelope me-2"></i>Электронная почта
                                    </label>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password"
                                           placeholder="password" />
                                    <label asp-for="Input.Password" class="form-label">
                                        <i class="bi bi-lock me-2"></i>Пароль
                                    </label>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                    <div class="form-text">
                                        <small>Минимум 6 символов</small>
                                    </div>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                                           placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword" class="form-label">
                                        <i class="bi bi-lock-fill me-2"></i>Подтвердите пароль
                                    </label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                </div>

                                <div class="d-grid mb-3">
                                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">
                                        <i class="bi bi-person-plus me-2"></i>Зарегистрироваться
                                    </button>
                                </div>

                                <div class="text-center">
                                    <p class="mb-0">
                                        Уже есть аккаунт?
                                        <a asp-page="./Login" class="text-decoration-none fw-bold">
                                            Войти
                                        </a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Правая часть с информацией -->
                    <div class="col-md-6 d-none d-md-block">
                        <div class="card-body h-100 d-flex flex-column justify-content-center p-5 bg-primary text-white rounded-end">
                            <h2 class="fw-bold mb-4">Присоединяйтесь к нам!</h2>
                            <div class="mb-4">
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-check-circle-fill me-3 fs-4"></i>
                                    <span>Бесплатная подача объявлений</span>
                                </div>
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-check-circle-fill me-3 fs-4"></i>
                                    <span>Личный кабинет с историей</span>
                                </div>
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-check-circle-fill me-3 fs-4"></i>
                                    <span>Чат с покупателями/продавцами</span>
                                </div>
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-check-circle-fill me-3 fs-4"></i>
                                    <span>Уведомления о новых сообщениях</span>
                                </div>
                            </div>

                            <div class="mt-4">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-shield-check display-6 me-3"></i>
                                    <div>
                                        <p class="mb-0 fw-bold">Безопасность данных</p>
                                        <p class="small mb-0">Ваши данные защищены шифрованием</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Дополнительная информация -->
            <div class="card mt-3 border-0 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Как это работает?</h5>
                    <div class="row mt-3">
                        <div class="col-md-4">
                            <div class="step-number mb-2">1</div>
                            <h6>Регистрация</h6>
                            <p class="small text-muted">Создайте аккаунт за 2 минуты</p>
                        </div>
                        <div class="col-md-4">
                            <div class="step-number mb-2">2</div>
                            <h6>Подача объявления</h6>
                            <p class="small text-muted">Заполните форму и опубликуйте</p>
                        </div>
                        <div class="col-md-4">
                            <div class="step-number mb-2">3</div>
                            <h6>Продажа/покупка</h6>
                            <p class="small text-muted">Общайтесь с клиентами в чате</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .step-number {
        width: 40px;
        height: 40px;
        background: #0d6efd;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        font-weight: bold;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}